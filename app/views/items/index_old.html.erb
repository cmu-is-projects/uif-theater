<h1>Listing items</h1>

<table>
  <tr>
		<th></th>
    <th>Name</th>
    <th>Keywords</th>
    <th>Quantity</th>
    <th>Location</th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td>
			<% if item.photos.empty? %>
				&nbsp;
			<% else %>
				<%= image_tag item.photos.first.image_url(:thumb) %>
			<% end %>
		</td>
		<td><%= link_to "#{item.name}", item %></td>
    <td><%= item.keywords %></td>
    <td><%= item.quantity %></td>
    <td><%= item.location.name %></td>
    
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Item', new_item_path %>
